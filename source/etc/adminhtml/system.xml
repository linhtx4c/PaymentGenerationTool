<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="payment_code" translate="label" type="text" sortOrder="100" showInDefault="0" showInWebsite="1" showInStore="1">
                <label>payment_title</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="0" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/payment_code/active</config_path>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="0" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <config_path>payment/payment_code/title</config_path>
                </field>
            </group>
        </section>
    </system>
</config>
